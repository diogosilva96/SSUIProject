<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diogo.projectssui.MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/music" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/playStopButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/currentTime"
            android:layout_centerHorizontal="true"
            android:background="@drawable/play"
            android:onClick="PlayPauseCommand"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="536dp" />

        <ImageButton
            android:id="@+id/previousButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/nextButton"
            android:background="@drawable/previous"
            android:onClick="PreviousCommand" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/totalDuration"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="14dp"
            android:background="@drawable/next"
            android:onClick="NextCommand" />

        <SeekBar
            android:id="@+id/durationBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/durationBar"
            android:layout_alignParentStart="true"
            android:text="currentTime" />

        <TextView
            android:id="@+id/totalDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/playStopButton"
            android:text="timeLeft" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
