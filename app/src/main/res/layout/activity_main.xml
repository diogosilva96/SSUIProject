<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diogo.projectssui.MediaPlayer">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1c1c1c"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:theme="@style/AppTheme.CustomRipple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_music" />

            <TextView
                android:id="@+id/appNameText"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:text="SSUI MusicPlayer"
                android:textColor="?android:attr/colorButtonNormal"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/fileButton"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="handleFilesClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_filemenu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/audioTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="5dip"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Music Playing"
                android:textColor="?android:attr/colorButtonNormal"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_music_play" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/durationBar"
                    android:layout_alignParentStart="true"
                    android:layout_weight="0"
                    android:text="00:00:00"
                    android:textAlignment="viewEnd"
                    android:textColor="?android:attr/colorButtonNormal"
                    android:textSize="13sp" />

                <SeekBar
                    android:id="@+id/durationBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:progressBackgroundTint="@android:color/darker_gray"
                    android:progressTint="@android:color/white"
                    android:thumbTint="@android:color/white" />

                <TextView
                    android:id="@+id/totalDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/playStopButton"
                    android:layout_weight="0"
                    android:text="00:00:00"
                    android:textAlignment="viewStart"
                    android:textColor="?android:attr/colorButtonNormal"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/shuffleButton"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:onClick="handleShuffleClick"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_shuffle_off" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/previousButton"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:onClick="handlePreviousClick"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_previous" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.88"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/playStopButton"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:onClick="handlePlayPauseClick"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_play" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/nextButton"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:onClick="handleNextClick"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_next" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/replayButton"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:onClick="handleReplayClick"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_replay" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
